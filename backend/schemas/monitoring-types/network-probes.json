{
  "schema_version": "1.0",
  "category": "network-probes",
  "display_name": "Network Probes (Rede)",
  "display_name_singular": "Network Probe",
  "icon": "üì°",
  "color": "blue",
  "description": "Testes de conectividade e protocolos de rede (ping, TCP, DNS, SSH)",
  "enabled": true,
  "order": 1,

  "types": [
    {
      "id": "icmp",
      "display_name": "ICMP (Ping)",
      "icon": "üèì",
      "description": "Testes de conectividade via ICMP ping",
      "enabled": true,
      "order": 1,

      "matchers": {
        "exporter_type_field": "exporter_type",
        "exporter_type_values": [
          "blackbox",
          "blackbox-exporter",
          "blackbox_exporter",
          "bb-exporter",
          "probe",
          "custom-blackbox"
        ],
        "module_field": "module",
        "module_values": [
          "icmp",
          "ping",
          "icmp_ipv4",
          "icmp_ipv6",
          "icmp_test"
        ]
      },

      "form_schema": {
        "fields": [
          {
            "name": "target",
            "label": "Alvo",
            "type": "text",
            "required": true,
            "placeholder": "192.168.1.1 ou hostname.com",
            "help": "IP ou hostname do dispositivo a ser monitorado",
            "validation": {
              "pattern": "^[a-zA-Z0-9.-]+$",
              "message": "Digite um IP ou hostname v√°lido"
            }
          },
          {
            "name": "interval",
            "label": "Intervalo",
            "type": "select",
            "required": true,
            "default": "30s",
            "options": ["15s", "30s", "60s", "5m", "10m"],
            "help": "Frequ√™ncia de verifica√ß√£o"
          },
          {
            "name": "timeout",
            "label": "Timeout",
            "type": "select",
            "required": false,
            "default": "10s",
            "options": ["5s", "10s", "30s", "60s"],
            "help": "Tempo m√°ximo de espera por resposta"
          }
        ],
        "required_metadata": ["company", "tipo_monitoramento", "grupo_monitoramento"],
        "optional_metadata": ["localizacao", "cidade", "notas"]
      },

      "table_schema": {
        "default_visible_columns": [
          "target",
          "status",
          "latency_ms",
          "company",
          "tipo_monitoramento",
          "grupo_monitoramento",
          "last_check",
          "uptime_percent"
        ],
        "default_sort": {
          "field": "target",
          "order": "asc"
        },
        "row_actions": ["edit", "delete", "view_history", "pause", "test_now"],
        "bulk_actions": ["delete", "pause", "resume", "export", "change_interval"]
      },

      "filters": {
        "quick_filters": ["company", "tipo_monitoramento", "status"],
        "advanced_filters": ["latency", "uptime_percent", "localizacao", "cidade"]
      },

      "metrics": {
        "primary": "probe_success",
        "secondary": ["probe_duration_seconds", "probe_icmp_duration_seconds"]
      }
    },

    {
      "id": "tcp",
      "display_name": "TCP Connect",
      "icon": "üîå",
      "description": "Testes de conectividade TCP em portas espec√≠ficas",
      "enabled": true,
      "order": 2,

      "matchers": {
        "exporter_type_field": "exporter_type",
        "exporter_type_values": [
          "blackbox",
          "blackbox-exporter",
          "blackbox_exporter",
          "bb-exporter",
          "probe"
        ],
        "module_field": "module",
        "module_values": [
          "tcp_connect",
          "tcp",
          "tcp_test"
        ]
      },

      "form_schema": {
        "fields": [
          {
            "name": "target",
            "label": "Alvo",
            "type": "text",
            "required": true,
            "placeholder": "192.168.1.1",
            "help": "IP ou hostname"
          },
          {
            "name": "port",
            "label": "Porta",
            "type": "number",
            "required": true,
            "min": 1,
            "max": 65535,
            "placeholder": "80",
            "help": "Porta TCP a ser testada"
          },
          {
            "name": "interval",
            "label": "Intervalo",
            "type": "select",
            "required": true,
            "default": "30s",
            "options": ["15s", "30s", "60s", "5m"]
          }
        ],
        "required_metadata": ["company", "tipo_monitoramento"],
        "optional_metadata": ["grupo_monitoramento", "notas"]
      },

      "table_schema": {
        "default_visible_columns": [
          "target",
          "port",
          "status",
          "company",
          "tipo_monitoramento",
          "last_check"
        ],
        "default_sort": {
          "field": "target",
          "order": "asc"
        },
        "row_actions": ["edit", "delete", "test_now"],
        "bulk_actions": ["delete", "export"]
      },

      "filters": {
        "quick_filters": ["company", "status", "port"],
        "advanced_filters": ["tipo_monitoramento", "response_time"]
      },

      "metrics": {
        "primary": "probe_success",
        "secondary": ["probe_duration_seconds"]
      }
    },

    {
      "id": "dns",
      "display_name": "DNS Query",
      "icon": "üåê",
