        "default_sort": {
          "field": "target",
          "order": "asc"
        },
        "row_actions": ["edit", "delete", "test_now"],
        "bulk_actions": ["delete", "export"]
      },

      "filters": {
        "quick_filters": ["company", "status"],
        "advanced_filters": ["localizacao", "tipo_monitoramento"]
      },

      "metrics": {
