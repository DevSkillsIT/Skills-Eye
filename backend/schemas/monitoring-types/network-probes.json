      "order": 3,

      "matchers": {
        "exporter_type_field": "exporter_type",
        "exporter_type_values": ["blackbox", "blackbox-exporter", "probe"],
        "module_field": "module",
        "module_values": ["dns", "dns_query", "dns_test"]
      },

      "form_schema": {
        "fields": [
          {
            "name": "target",
            "label": "Servidor DNS",
            "type": "text",
            "required": true,
            "placeholder": "8.8.8.8 ou dns.google.com",
            "help": "Servidor DNS a ser testado"
          },
          {
            "name": "query_name",
            "label": "Dom√≠nio para Consulta",
            "type": "text",
            "required": true,
            "placeholder": "example.com",
            "help": "Dom√≠nio para testar resolu√ß√£o"
          },
          {
            "name": "interval",
            "label": "Intervalo",
            "type": "select",
            "required": true,
            "default": "60s",
            "options": ["30s", "60s", "5m", "10m"]
          }
        ],
        "required_metadata": ["company", "tipo_monitoramento"],
        "optional_metadata": ["provedor", "notas"]
      },

      "table_schema": {
        "default_visible_columns": [
          "target",
          "query_name",
          "status",
          "response_time_ms",
          "company",
          "last_check"
        ],
        "default_sort": {
          "field": "target",
          "order": "asc"
        },
        "row_actions": ["edit", "delete", "test_now"],
        "bulk_actions": ["delete", "export"]
      },

      "filters": {
        "quick_filters": ["company", "status"],
        "advanced_filters": ["provedor", "response_time"]
      },

      "metrics": {
