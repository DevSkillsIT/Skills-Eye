      "form_schema": {
        "fields": [
          {
            "name": "target",
            "label": "Alvo",
            "type": "text",
            "required": true,
            "placeholder": "192.168.1.1",
            "help": "IP ou hostname do servidor SSH"
          },
          {
            "name": "port",
            "label": "Porta",
            "type": "number",
            "required": false,
            "default": 22,
            "min": 1,
            "max": 65535,
            "help": "Porta SSH (padr√£o: 22)"
          },
          {
            "name": "interval",
            "label": "Intervalo",
            "type": "select",
            "required": true,
            "default": "60s",
            "options": ["30s", "60s", "5m", "10m"]
          }
        ],
        "required_metadata": ["company", "tipo_monitoramento"],
        "optional_metadata": ["localizacao", "notas"]
      },

      "table_schema": {
        "default_visible_columns": [
          "target",
          "port",
          "status",
          "company",
          "tipo_monitoramento",
          "last_check"
